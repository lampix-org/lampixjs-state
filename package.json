{
  "name": "@lampix/state",
  "version": "0.2.5",
  "description": "Lampix.js state manager helper",
  "repository": {
    "type": "git",
    "url": "https://github.com/lampix-org/lampixjs-state"
  },
  "main": "lib/lampix.js",
  "module": "lib/lampix.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "assets"
  ],
  "scripts": {
    "docs": "typedoc --out docs src/index.ts --name Lampix.js --theme minimal --readme README.md",
    "build": "shx rm -rf ./lib && webpack",
    "prepublishOnly": "npm run build",
    "check-ts": "tsc --noEmit",
    "precommit": "lint-staged"
  },
  "author": "Lampix",
  "license": "MIT",
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "rollup": "0.63.5",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-css-only": "0.4.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "shx": "0.2.2",
    "ts-loader": "4.4.2",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.2",
    "typedoc": "0.9.0",
    "typescript": "2.6.2",
    "webpack": "4.16.3",
    "webpack-cli": "3.1.0"
  },
  "peerDependencies": {
    "@lampix/core": "0.1.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint"
    ]
  }
}
